<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree View -->
    <record id="view_sysedux_client_tree" model="ir.ui.view">
        <field name="name">sysedux.client.tree</field>
        <field name="model">sysedux.client</field>
        <field name="arch" type="xml">
            <list string="Clients" decoration-danger="status == 'suspended'" decoration-muted="status == 'cancelled'" decoration-warning="status == 'trial'">
                <field name="code"/>
                <field name="name"/>
                <field name="subscription_plan_id"/>
                <field name="status" widget="badge" decoration-success="status == 'active'" decoration-warning="status == 'trial'" decoration-danger="status in ('suspended', 'cancelled')"/>
                <field name="current_users"/>
                <field name="max_users"/>
                <field name="current_storage_gb" widget="float" digits="[16, 2]"/>
                <field name="max_storage_gb"/>
                <field name="monthly_price" widget="monetary"/>
                <field name="balance_due" widget="monetary" decoration-danger="balance_due > 0"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_sysedux_client_form" model="ir.ui.view">
        <field name="name">sysedux.client.form</field>
        <field name="model">sysedux.client</field>
        <field name="arch" type="xml">
            <form string="Client">
                <header>
                    <button name="action_start_trial" string="Start Trial" type="object" class="btn-primary" invisible="status != 'draft'"/>
                    <button name="action_activate" string="Activate" type="object" class="btn-success" invisible="status not in ('draft', 'trial', 'suspended')"/>
                    <button name="action_suspend" string="Suspend" type="object" class="btn-warning" invisible="status != 'active'"/>
                    <button name="action_cancel" string="Cancel" type="object" class="btn-danger" invisible="status in ('cancelled', 'draft')"/>
                    <button name="action_create_invoice" string="Create Invoice" type="object" class="btn-secondary" invisible="status != 'active'"/>
                    <button name="action_refresh_usage" string="Refresh Usage" type="object" class="btn-secondary"/>
                    <field name="status" widget="statusbar" statusbar_visible="draft,trial,active"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_invoices" type="object" class="oe_stat_button" icon="fa-money">
                            <field name="invoice_count" widget="statinfo" string="Invoices"/>
                        </button>
                    </div>
                    <field name="logo" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Client Name"/>
                        </h1>
                        <h4>
                            <field name="code" readonly="1"/>
                        </h4>
                    </div>
                    
                    <group>
                        <group string="Contact Info">
                            <field name="partner_id"/>
                        </group>
                        <group string="Subscription">
                            <field name="subscription_plan_id"/>
                            <field name="monthly_price"/>
                            <field name="start_date"/>
                            <field name="trial_end_date" invisible="status != 'trial'"/>
                            <field name="next_billing_date"/>
                            <field name="expiry_date"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Instance Configuration">
                            <field name="domain"/>
                            <field name="full_domain"/>
                            <field name="db_name"/>
                            <field name="instance_port"/>
                            <field name="server_ip"/>
                        </group>
                        <group string="Usage">
                            <div class="o_row">
                                <label for="current_users"/>
                                <field name="current_users" class="oe_inline"/> / 
                                <field name="max_users" class="oe_inline"/>
                                (<field name="users_usage_percent" widget="float" digits="[16, 1]" class="oe_inline"/>%)
                            </div>
                            <div class="o_row">
                                <label for="current_storage_gb"/>
                                <field name="current_storage_gb" class="oe_inline" digits="[16, 2]"/> / 
                                <field name="max_storage_gb" class="oe_inline"/> GB
                                (<field name="storage_usage_percent" widget="float" digits="[16, 1]" class="oe_inline"/>%)
                            </div>
                            <field name="current_students"/>
                        </group>
                    </group>

                    <group>
                        <group string="Health Status">
                            <field name="is_online" widget="boolean_toggle"/>
                            <field name="last_health_check"/>
                            <field name="cpu_usage" widget="float" digits="[16, 1]"/>
                            <field name="memory_usage_mb" widget="float" digits="[16, 0]"/>
                        </group>
                        <group string="Billing Summary">
                            <field name="total_invoiced"/>
                            <field name="total_paid"/>
                            <field name="balance_due" decoration-danger="balance_due > 0"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Notes" name="notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_sysedux_client_kanban" model="ir.ui.view">
        <field name="name">sysedux.client.kanban</field>
        <field name="model">sysedux.client</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="status">
                <field name="name"/>
                <field name="code"/>
                <field name="status"/>
                <field name="subscription_plan_id"/>
                <field name="current_users"/>
                <field name="max_users"/>
                <field name="is_online"/>
                <field name="balance_due"/>
                <field name="color"/>
                <templates>
                    <t t-name="card">
                        <div class="o_kanban_content">
                            <div class="row">
                                <div class="col-8">
                                    <strong><field name="name"/></strong>
                                </div>
                                <div class="col-4 text-end">
                                    <span t-if="record.is_online.raw_value" class="badge text-bg-success">Online</span>
                                    <span t-else="" class="badge text-bg-danger">Offline</span>
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-12 text-muted">
                                    <field name="subscription_plan_id"/>
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-6">
                                    <span class="text-muted">Users:</span> 
                                    <field name="current_users"/>/<field name="max_users"/>
                                </div>
                                <div class="col-6 text-end">
                                    <span t-if="record.balance_due.raw_value > 0" class="badge text-bg-danger">
                                        Due: <field name="balance_due"/>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_sysedux_client_search" model="ir.ui.view">
        <field name="name">sysedux.client.search</field>
        <field name="model">sysedux.client</field>
        <field name="arch" type="xml">
            <search string="Search Clients">
                <field name="name"/>
                <field name="code"/>
                <field name="domain"/>
                <field name="partner_id"/>
                <filter string="Active" name="active" domain="[('status', '=', 'active')]"/>
                <filter string="Trial" name="trial" domain="[('status', '=', 'trial')]"/>
                <filter string="Suspended" name="suspended" domain="[('status', '=', 'suspended')]"/>
                <separator/>
                <filter string="Has Balance Due" name="balance_due" domain="[('balance_due', '>', 0)]"/>
                <filter string="Online" name="online" domain="[('is_online', '=', True)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>
                    <filter string="Plan" name="group_plan" context="{'group_by': 'subscription_plan_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_sysedux_client" model="ir.actions.act_window">
        <field name="name">Clients</field>
        <field name="res_model">sysedux.client</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add your first client
            </p>
            <p>
                Register clients and manage their subscriptions, usage and billing.
            </p>
        </field>
    </record>

</odoo>
