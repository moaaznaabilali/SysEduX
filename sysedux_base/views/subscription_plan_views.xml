<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Tree View -->
    <record id="view_subscription_plan_tree" model="ir.ui.view">
        <field name="name">sysedux.subscription.plan.tree</field>
        <field name="model">sysedux.subscription.plan</field>
        <field name="arch" type="xml">
            <list string="Subscription Plans" decoration-muted="not active">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="max_users"/>
                <field name="max_storage_gb"/>
                <field name="price_monthly" widget="monetary"/>
                <field name="active" column_invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_subscription_plan_form" model="ir.ui.view">
        <field name="name">sysedux.subscription.plan.form</field>
        <field name="model">sysedux.subscription.plan</field>
        <field name="arch" type="xml">
            <form string="Subscription Plan">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Plan Name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Basic Info">
                            <field name="code"/>
                            <field name="sequence"/>
                            <field name="active"/>
                            <field name="badge_color"/>
                        </group>
                        <group string="Limits">
                            <field name="max_users"/>
                            <field name="max_storage_gb"/>
                            <field name="max_students"/>
                        </group>
                    </group>
                    <group>
                        <group string="Pricing">
                            <field name="currency_id"/>
                            <field name="price_monthly"/>
                            <field name="price_yearly"/>
                        </group>
                        <group string="Features">
                            <field name="has_api_access"/>
                            <field name="has_custom_domain"/>
                            <field name="has_priority_support"/>
                            <field name="has_advanced_reports"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Features Description" name="features">
                            <field name="features" placeholder="List features included in this plan..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_subscription_plan_kanban" model="ir.ui.view">
        <field name="name">sysedux.subscription.plan.kanban</field>
        <field name="model">sysedux.subscription.plan</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="code"/>
                <field name="max_users"/>
                <field name="max_storage_gb"/>
                <field name="price_monthly"/>
                <field name="color"/>
                <field name="badge_color"/>
                <templates>
                    <t t-name="card">
                        <div class="row">
                            <div class="col-12">
                                <strong><field name="name"/></strong>
                                <span class="float-end badge rounded-pill" t-attf-class="text-bg-#{record.badge_color.raw_value}">
                                    <field name="code"/>
                                </span>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-6">
                                <span class="text-muted">Users:</span> <field name="max_users"/>
                            </div>
                            <div class="col-6">
                                <span class="text-muted">Storage:</span> <field name="max_storage_gb"/> GB
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-12">
                                <strong><field name="price_monthly" widget="monetary"/> /mo</strong>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="action_subscription_plan" model="ir.actions.act_window">
        <field name="name">Subscription Plans</field>
        <field name="res_model">sysedux.subscription.plan</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first subscription plan
            </p>
            <p>
                Define different plans for your clients with varying limits and pricing.
            </p>
        </field>
    </record>

</odoo>
