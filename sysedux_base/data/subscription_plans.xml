<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Basic Plan -->
        <record id="plan_basic" model="sysedux.subscription.plan">
            <field name="name">Basic</field>
            <field name="code">basic</field>
            <field name="sequence">10</field>
            <field name="max_users">10</field>
            <field name="max_storage_gb">5</field>
            <field name="max_students">200</field>
            <field name="price_monthly">500</field>
            <field name="has_api_access">False</field>
            <field name="has_custom_domain">False</field>
            <field name="has_priority_support">False</field>
            <field name="has_advanced_reports">False</field>
            <field name="badge_color">secondary</field>
            <field name="color">1</field>
            <field name="features">✓ Up to 10 users
✓ 5 GB storage
✓ 200 students max
✓ Basic reports
✓ Email support
✓ Standard features</field>
        </record>

        <!-- Professional Plan -->
        <record id="plan_professional" model="sysedux.subscription.plan">
            <field name="name">Professional</field>
            <field name="code">professional</field>
            <field name="sequence">20</field>
            <field name="max_users">50</field>
            <field name="max_storage_gb">25</field>
            <field name="max_students">1000</field>
            <field name="price_monthly">1500</field>
            <field name="has_api_access">True</field>
            <field name="has_custom_domain">True</field>
            <field name="has_priority_support">False</field>
            <field name="has_advanced_reports">True</field>
            <field name="badge_color">primary</field>
            <field name="color">4</field>
            <field name="features">✓ Up to 50 users
✓ 25 GB storage
✓ 1000 students max
✓ Advanced reports
✓ API access
✓ Custom domain
✓ Priority email support
✓ All Basic features</field>
        </record>

        <!-- Enterprise Plan -->
        <record id="plan_enterprise" model="sysedux.subscription.plan">
            <field name="name">Enterprise</field>
            <field name="code">enterprise</field>
            <field name="sequence">30</field>
            <field name="max_users">0</field>
            <field name="max_storage_gb">100</field>
            <field name="max_students">0</field>
            <field name="price_monthly">5000</field>
            <field name="has_api_access">True</field>
            <field name="has_custom_domain">True</field>
            <field name="has_priority_support">True</field>
            <field name="has_advanced_reports">True</field>
            <field name="badge_color">success</field>
            <field name="color">10</field>
            <field name="features">✓ Unlimited users
✓ 100 GB storage
✓ Unlimited students
✓ All reports
✓ Full API access
✓ Custom domain
✓ 24/7 priority support
✓ Dedicated account manager
✓ Custom integrations
✓ SLA guarantee
✓ All Professional features</field>
        </record>

    </data>
</odoo>
